{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.types.d.ts"],
  "exclude": ["node_modules"]
}
